---
import type { GetStaticPathsOptions } from "astro";
import Layout from '../layouts/Layout.astro';
import Pagination from '../components/Pagination.astro';
import { newtClient } from '../lib/newt'
import type { Article } from '../lib/newt'
import dayjs from "dayjs";
import 'dayjs/locale/ja';
dayjs.locale('ja');

type Props = {
	page: {
		data: Article[],
		url: {
			prev: string,
			next: string
		}
	}
}

export async function getStaticPaths({paginate}: GetStaticPathsOptions) {
	const { items: articles } = await newtClient.getContents<Article>({
		appUid: 'blog',
		modelUid: 'article',
		query: {
			select: ['title', 'slug', 'createdAt', 'body'],
		},
	})
	return paginate(articles, {pageSize: 2})
}

const { page } = Astro.props as Props;
---

<Layout title="Dear(Design)Diary" description="record daily events">
	<main class="pt-20 m-auto max-w-2xl w-[calc(100%-2rem)] text-white">
		<h1 class="font-bold text-center text-4xl sm:text-6xl">Dear<span class="text-gradient bg-gradient-to-r from-blue-600 via-green-500 to-indigo-400">(Design)</span>Diary</h1>
		<section class="pt-16">
			<ul class="space-y-4">
				{
					page.data.map((article) => {
						return (
							<li class="border-b border-gray-600 pb-4">
								<a href={`/articles/${article.slug}`}>
									<div class="flex flex-col gap-1.5">
										<h2 class="text-xl">{article.title}</h2>
										<time class="text-sm text-gray-400">{dayjs(article.createdAt).format('YYYY年MM月DD日(ddd)')}</time>
									</div>
								</a>
							</li>
						)
					})
				}
			</ul>
			<div class="text-right pt-4">
				<Pagination prevUrl={page.url.prev} nextUrl={page.url.next} />
			</div>
		</section>
	</main>
</Layout>

